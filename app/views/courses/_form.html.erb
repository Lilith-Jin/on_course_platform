<%= form_with(model: course) do |form| %>
  <div class="course-detail">
    <%= form.label :theme, "課程名稱" %>
    <%= form.text_field :theme %>
  </div>
  <div class="course-detail">
    <%= form.label :type, "課程類型" %>
    <%= form.text_field :type %>
  </div>
  <div class="course-detail">
    <%= form.label :price, "價格" %>
    <%= form.number_field :price %>
  </div>
  <div class="course-detail">
    <%= form.label :intro, "課程描述" %>
    <%= form.text_area :intro %>
  </div>
  <div class="course-detail">
    <%= form.label :shelf, "課程狀態" %>
    <%= form.text_field :shelf %>
  </div>
  <div class="course-detail">
    <%= form.label :valid_date, "課程期限" %>
    <%= form.number_field :valid_date %>
  </div>
  <div class="course-detail">
    <%= form.label :start_date, "起始日期" %>
    <%= form.date_field :start_date %>
  </div>
  <div class="course-detail-btn">
    <%= form.submit btn_label %>
  </div>
<% end %>